// BURBUJA.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include "stdio.h"
#include "conio.h"
#define NMAX 100

int main()
{
  int i,j,vec[NMAX],aux,n;
	//pedir numero de valor a cargar
	do
	{
		printf("Ingrese el numero de elementos del vector:");
		scanf("%d", &n);
	}
	while ((n>100) || (n<=0));


	//cagar el valores iniciales
	for(i=0;i<n;i++)
	{
		printf("vec: [ %d]=", i);
		scanf("%d", &vec[i]);
	}
	//clasificar el vector con burbuja
	for(i=0;i<n-1;i++)
		for (j=i+1;j<n;j++)
		{
			if (vec[i]>vec[j])
			{
				aux=vec[j];
				vec[j]=vec[i];
				vec[i]=aux;

			};
		}
			// mostrar el vector
			for(i=0;i<n;i++)
			{
					printf("\nvec: [ %d]\t=", i);
		            printf("%d", vec[i]);
			}
			printf("\n EL menor es %d", vec[0]);
			printf("\n EL mayor es %d", vec[n-1]);
			getch();
			return(0);
}


